// Oblivion Colors
// #000000 Background - Selected
// #1E1E1E Background - Default
// #2A2A2A Background - Current
// #303030 Lines
// #808080 Text - Dark
// #D8D8D8 Text - Default
// #D197D9
// #D25252
// #FFC600 #BFA491 #EFC090
// #7FB347 #C7DD0C #D9E577
// #79ABFF #BED6FF

// Flattown Colors
// Foreground  #F9F2F4
// Grey        #60666B
// Light Grey  #798188
// Red         #DB402C
// Orange      #FA9A4B
// Yellow      #FFD75F
// Green       #76B976
// Light Green #B8D977
// Blue        #5F87D7
// Light Blue  #96CDEB
// Purple      #AF87D7
{
  "name": "Oblivion",
  "type": "dark",
  "colors": {
    "editor.background": "#1e1e1e",
    "editor.foreground": "#d8d8d8",
    "editor.lineHighlightBorder": "#1E1E1E",
    "editor.lineHighlightBackground": "#2A2A2A",
    "editor.selectionHighlightBackground": "#2A2A2A",
    "editor.selectionHighlightBorder": "#555",
    "editor.selectionBackground": "#000",
    "editorCursor.background": "#1E1E1E",
    "editorCursor.foreground": "#d8d8d8",
    "editorError.foreground": "#d25252",
    "editorIndentGuide.activeBackground": "#444",
    "editorIndentGuide.background": "#222",
    "editorLineNumber.foreground": "#444",
    "statusBar.background": "#333333",
    "menu.background": "#333",
    "menu.foreground": "#D8D8D8",
    "menu.selectionBackground": "#444",
    "menu.selectionForeground": "#ffffff",
    "settings.numberInputBackground": "#292929",
    "settings.textInputBackground": "#292929"
  },
  "tokenColors": [
    {
      "name": "Keyword",
      "scope": [
        // General
        "keyword",
        "keyword.operator.new",
        "storage.modifier",
        "storage.type.primitive",
        // JAVA
        "storage.type.annotation.java",
        "meta.method-call entity.name.function.java",
        // JS
        "keyword.control.module.js"
      ],
      "settings": {
        "foreground": "#FFFFFF",
        "fontStyle": ""
      }
    },
    {
      "name": "Keyword - operator",
      "scope": ["keyword.operator", "punctuation.definition"],
      "settings": {
        "foreground": "#D8D8D8"
      }
    },
    {
      "name": "Grey",
      "scope": [
        "comment",
        "punctuation.definition.comment",
        // CSS
        "punctuation.terminator.rule.css"
      ],
      "settings": {
        "foreground": "#60666B"
      }
    },
    {
      "name": "Red",
      "scope": [
        "entity.name.type.class",
        "storage.type",
        "storage.modifier.import",
        "storage.modifier.package",
        // JS
        "variable.other.readwrite.js",
        "entity.name.function.js",
        "meta.tag.jsx support.class.component",
        "entity.name.type.instance.js",
        // CSS
        "entity.name.tag.css"
      ],
      "settings": {
        "foreground": "#D25252",
        "fontStyle": ""
      }
    },
    {
      "name": "Yellow",
      "scope": ["string", "punctuation.definition.string"],
      "settings": {
        "foreground": "#FFC600"
      }
    },
    {
      "name": "Constants",
      "scope": [
        "constant",
        // JS
        "constant.other.object.key.js string",
        "constant.other.object.key.js punctuation.definition.string",
        "meta.tag.jsx entity.name",
        // CSS
        "support.constant.property-value.css"
      ],
      "settings": {
        "foreground": "#EFC090"
      }
    },
    {
      "name": "Tag",
      "scope": [
        // JS
        "entity.other.attribute-name.jsx",
        "punctuation.definition.quasi",
        "entity.quasi.element.js",
        // XML
        "punctuation.definition.tag"
      ],
      "settings": {
        "foreground": "#BFA4A4"
      }
    },
    {
      "name": "Tag",
      "scope": ["entity.other.attribute-name.jsx"],
      "settings": {
        "fontStyle": "italic"
      }
    },
    {
      "name": "Green",
      "scope": ["constant.numeric", "entity.name.type.enum"],
      "settings": {
        "foreground": "#7FB347"
      }
    },
    {
      "name": "Blue",
      "scope": [
        "variable",
        // JS
        "meta.function variable.other.readwrite.js",
        "meta.method-call variable.other.readwrite.js",
        "meta.function-call variable.other.readwrite.js",
        "entity.quasi variable.other.readwrite.js"
      ],
      "settings": {
        "foreground": "#79ABFF"
      }
    },
    {
      "name": "Light Blue",
      "scope": [
        "variable.other.definition",
        // JAVA
        "variable.other.object.property",
        "entity.name.function.java",
        // JS
        "string.unquoted.js",
        "variable.other.property.js",
        "meta.function-call entity.name.function.js",
        "meta.method-call entity.name.function.js",
        "support.function.mutator.js",
        // CSS
        "support.type.property-name.css",
        // JSON
        "support.type.property-name.json"
      ],
      "settings": {
        "foreground": "#BED6FF"
      }
    },
    {
      "name": "Purple",
      "scope": [
        // JS
        "source.js storage.type",
        "JSXAttrs punctuation.section.embedded",
        "keyword.operator.ternary.js",
        // CSS
        "keyword.other.unit",
        "support.function.url.css"
      ],
      "settings": {
        "foreground": "#D197D9"
      }
    },
    {
      "name": "Interface",
      "scope": ["entity.quasi.element.js"],
      "settings": {
        "fontStyle": "italic"
      }
    },
    {
      "name": "bold",
      "scope": [
        // JAVA
        "entity.name.function.java",
        "keyword.control.java",
        "storage.modifier.java",
        // JS
        "keyword.control.flow.js",
        "keyword.control.module.js"
      ],
      "settings": {
        "fontStyle": "bold"
      }
    },
    {
      "name": "Italic",
      "scope": ["constant.language.null"],
      "settings": {
        "fontStyle": "italic"
      }
    },
    {
      "name": "Italic bold",
      "scope": ["keyword.control.new", "keyword.operator.new"],
      "settings": {
        "fontStyle": "italic bold"
      }
    }
  ]
}
